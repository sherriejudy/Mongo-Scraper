<!--Homepage-->
<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Mongo Scraper</h1>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
        {{#each article}}
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{this.title}}</h4>
                <a class="font-italic" href={{this.link}} target="_blank">{{this.link}}</a>
                <br><br>
                <p class="card-text"> {{this.summary}}</p>
                <form action="/api/saved/{{this.id}}" method="POST">
                    <button class="btn btn-success save" type="submit">Save Article</button>
                </form>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Uh Oh. Looks like we don't have any new articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>


